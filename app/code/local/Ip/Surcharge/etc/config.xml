<?xml version="1.0"?>
<config>
 
    <modules>
        <Ip_Surcharge>
            <version>0.1.0</version>
        </Ip_Surcharge>
    </modules>
 
    <global>
		<helpers>
			<surcharge>
				<class>Ip_Surcharge_Helper</class>
			</surcharge>
		</helpers> 
		<sales>
            <quote>
                <totals>
                    <surcharge>
                        <class>Ip_Surcharge_Model_Total_Quote</class>
                    </surcharge>
                </totals>
            </quote>
        </sales> 
    </global>
	 <default>
        <sales>
            <totals_sort>
                <surcharge>45</surcharge>
            </totals_sort>
        </sales>
		<ip_section>
			<ip_surcharge>
				<ip_surcharge_amt>10</ip_surcharge_amt>
				<ip_surcharge_label>Surcharges</ip_surcharge_label>
				<ip_surcharge_additional>1</ip_surcharge_additional>
			</ip_surcharge>
		</ip_section>
    </default>
</config>